<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeAliases>
     <typeAlias type="com.work.entity.Student" alias="student"/>
     <typeAlias type="com.work.entity.StudentSearch" alias="studentsearch"/>
     <typeAlias type="com.work.entity.Department" alias="department"/>
     <typeAlias type="com.work.entity.ComboTable" alias="combotable"/>
  </typeAliases>  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost/student"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/work/dao/StudentMapper.xml" />
  </mappers>
</configuration> 